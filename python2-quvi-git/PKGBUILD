# Maintainer: Tom Vincent <http://tlvince.com/contact/>
pkgname=python2-quvi-git
_pkgname=quvi
pkgver=20111119
pkgrel=1
pkgdesc="LibQuvi wrapper for Python"
arch=(any)
url="https://github.com/metal3d/python-quvi"
license=('GPL')
depends=('python2' 'libquvi')
makedepends=('git')
options=(!emptydirs)

_gitroot=git://github.com/metal3d/python-quvi.git
_gitname=$_pkgname

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  # Until quvi 0.4 fixes are merged into master
  git checkout -b dev origin/developpement

  msg "GIT checkout done or server timeout"
}

package() {
  cd "$srcdir/$_pkgname"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

