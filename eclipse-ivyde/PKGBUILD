# Contributor: Tom Vincent <http://tlvince.com/contact/>

pkgname=eclipse-ivyde
pkgver=2.2.0.beta1
pkgrel=1
pkgdesc="Eclipse plugin which integrates Apache Ivy's dependency management"
url="https://ant.apache.org/ivy/ivyde/"
arch=('any')
license=('apache')
depends=('eclipse')
makedepends=('unzip')
source=("http://mirrors.ukfast.co.uk/sites/ftp.apache.org/ant/ivyde/${pkgver}/apache-ivyde-${pkgver}-201203282058-RELEASE.zip")
md5sums=('97d6f8ab60a9a20a1fa29d577b12b380')

build() {
  _dest=${pkgdir}/usr/share/eclipse/dropins/${pkgname/eclipse-}/eclipse
  mkdir -p ${_dest}
  cd ${_dest}
  unzip ${srcdir}/apache-ivyde-${pkgver}-201203282058-RELEASE.zip
}
