pkgname="python-nosenotify"
_pkgname="NoseNotify"
pkgver="0.1.8"
pkgrel="1"
pkgdesc="nose plugin for Linux popup notification bubbles"
url="http://pypi.python.org/pypi/NoseNotify/"
arch=("i686" "x86_64")
license=("LGPL")
depends=("python-nose" "python-notify")
source=("http://pypi.python.org/packages/source/N/$_pkgname/$_pkgname-$pkgver.tar.gz")
md5sums=("7d376b169085f04c9d6aee2c9fb4605e")

build()
{
    cd "$srcdir/$_pkgname-$pkgver"
    python2 setup.py install --root=$pkgdir
}
