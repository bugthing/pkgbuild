pkgname=python-nosenotify
_pkgname=NoseNotify
pkgver=0.1.8
pkgrel=1
pkgdesc="nose plugin for Linux popup notification bubbles"
url="http://pypi.python.org/pypi/NoseNotify/"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('python-nose')
source=('http://pypi.python.org/packages/source/N/$_pkgname/$_pkgname-$pgkver.tar.gz')
md5sums=('9f3b7ec5c57130b96061cb486b79c076')

build()
{
    cd "$srcdir/$pkgname-$pkgver"
    python2 setup.py install --root=$pkgdir
}
