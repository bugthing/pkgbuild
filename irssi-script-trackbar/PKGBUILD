# Maintainer: Tom Vincent <http://tlvince.com/contact/>
pkgname=irssi-script-trackbar
_name=trackbar.pl
pkgver=1.1
pkgrel=1
pkgdesc="Shows a bar where you've last read a window"
arch=(any)
url="http://scripts.irssi.org/"
source="http://scripts.irssi.org/scripts/$_name"
license=('GPL')
depends=('irssi')

package() {
  cd "$srcdir"
  install -D -d "$pkgdir/usr/share/irssi/scripts"
  cp "$_name" "$pkgdir/usr/share/irssi/scripts"
}

md5sums=('6d149a34114005f1aa1e8c5a7f72074a')
