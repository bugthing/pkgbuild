# Maintainer: Tom Vincent <http://tlvince.com/contact/>
pkgname=irssi-script-nm
_name=nm.pl
pkgver=0.3.10
pkgrel=1
pkgdesc="Right aligned nicks depending on longest nick"
arch=(any)
url="http://scripts.irssi.org/"
source="http://scripts.irssi.org/scripts/$_name"
license=('GPL')
depends=('irssi')

package() {
  cd "$srcdir"
  install -D -d "$pkgdir/usr/share/irssi/scripts"
  cp "$_name" "$pkgdir/usr/share/irssi/scripts"
}

md5sums=('3fed1f29d9062bfd1badd4628d8f4b92')
