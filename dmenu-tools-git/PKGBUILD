# Maintainer: Tom Vincent <http://tlvince.com/contact/>
pkgname=dmenu-tools-git
_pkgname=dmenu-tools
pkgver=20120823
pkgrel=2
pkgdesc="A collection of scripts powered by dmenu"
arch=(any)
url="https://github.com/tlvince/dmenu-tools"
license=("MIT")
depends=("dmenu")
optdepends=("netcfg" "mpc")
makedepends=("git")
install=$_pkgname.install

_gitroot=git://github.com/tlvince/dmenu-tools.git
_gitname=$_pkgname

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
}

package() {
  cd "$srcdir/$_pkgname/src"
  for i in *; do
    install -Dm755 "$i" "$pkgdir/usr/bin/$i"
  done

  cd ../doc
  for i in *; do
    install -Dm644 "$i" "$pkgdir/usr/share/doc/dmenu-tools/$i"
  done

  install -Dm644 ../license.mkd "$pkgdir/usr/share/license/dmenu-tools/license.txt"
  install -Dm644 ../example/dmenu-tools.conf "$pkgdir/usr/share/doc/dmenu-tools/dmenu-tools.conf"
}

# vim:set ts=2 sw=2 et:
