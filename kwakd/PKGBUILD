# Maintainer: Tom Vincent <http://tlvince.com/contact/>

pkgname=kwakd
pkgver=0.2
pkgrel=2
pkgdesc="A web server serving blank html pages"
url="http://code.google.com/p/kwakd/"
arch=("i686" "x86_64")
license=("GPL")
source=("http://kwakd.googlecode.com/files/$pkgname-$pkgver.tar.gz" $pkgname.d
        $pkgname.conf)
install="$pkgname.install"

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
  install -D -m755 "${startdir}/${pkgname}.d" "${pkgdir}/etc/rc.d/${pkgname}"
  install -D -m664 "${startdir}/${pkgname}.conf" "${pkgdir}/etc/conf.d/${pkgname}"
}
md5sums=('26b7ef8232e09d0d54799f45346968ce'
         'cc873e49117c7e0cac41786d10a97db8'
         '436277e82fa20c139017b237fec608e1')
